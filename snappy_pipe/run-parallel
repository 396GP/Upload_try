./Allclean

#!/bin/sh
cd ${0%/*} || exit 1                               # Run from this directory
. $WM_PROJECT_DIR/bin/tools/RunFunctions        # Tutorial run functions
##------------------------------------------------------------------------------

runApplication blockMesh > blockMesh.log
decomposePar > decomposePar.log
restore0Dir -processor
runApplication mpirun --oversubscribe -np 12 snappyHexMesh -overwrite -parallel > snappyHexMesh.log
runApplication mpirun --oversubscribe -np 12 topoSet -parallel > topoSet.log
runApplication mpirun --oversubscribe -np 12 createPatch -overwrite -parallel > createPatch.log
reconstructParMesh -constant -mergeTol 1E-06 > log.reconstructParMesh
touch snappy_pipe.foam
